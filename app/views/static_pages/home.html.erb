<% if signed_in? %>

  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      </aside>

    <div class="span8">
      <h3>Followers Reviews </h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Weiver </h1>

    <h2>
      This is the home page for the SridharG sample application.<br>
      Special Thanks to
      <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
      
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  
<% end %> 
