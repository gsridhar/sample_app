<li>
  <span class="content"><%= micropost.content %> <br> 
    <font color="blue">reviewed on </font> 
  	<%= link_to Category.find_by_category_id(micropost.category_id).productname, Category.find_by_category_id(micropost.category_id) %> 

  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <% if current_user?(micropost.user) %>
    <%= link_to "delete", micropost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: micropost.content %>
  <% end %>
</li>