<% provide(:title, @category.productname) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>

        <%= @category.productname %>
      </h1>
    </section>
    <section>
        <%= render 'shared/micropost_form' %>
      </section>
    
  </aside>
  <div class="span8">
  
    <% if @category.microposts.any? %>
      <h3>All Reviews (<%= @category.microposts.count %>)</h3>
      <h4>For Followers reviews click 
        <%= link_to 'here', {:controller => "static_pages", :action => "fshow" ,:id => @category.id}%></h4>


      <ol class="microposts">
        <%= render 'microposts/micropost1' %>
      </ol>
      <%= will_paginate @micropost %>
    <% end %>
  </div>
</div>

